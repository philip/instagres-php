{
    "name": "philip/instagres",
    "description": "PHP SDK for creating instant claimable Neon PostgreSQL databases with zero configuration",
    "type": "library",
    "keywords": ["neon", "postgres", "postgresql", "database", "serverless", "instagres", "launchpad"],
    "homepage": "https://neon.com",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Neon Contributors"
        }
    ],
    "support": {
        "docs": "https://neon.com/docs/reference/neon-launchpad",
        "issues": "https://github.com/philip/instagres-php/issues",
        "source": "https://github.com/philip/instagres-php"
    },
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ramsey/uuid": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Philip\\Instagres\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Philip\\Instagres\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^12.4"
    }
}
